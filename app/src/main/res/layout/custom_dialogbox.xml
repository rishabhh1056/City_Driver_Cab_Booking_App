<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20.00dp"
    android:background="@color/lightBlue"
    android:elevation="35.00dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50.00dp"
        android:layout_marginVertical="2.00dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finding Driver..."

            android:textSize="18.00sp"
            android:layout_marginTop="20.00dp"/>



        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100.00dp"
            android:layout_height="100.00dp"
            app:lottie_rawRes="@raw/loder"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>