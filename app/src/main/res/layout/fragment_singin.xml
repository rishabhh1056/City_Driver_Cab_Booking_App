<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".View.Authentication.Views.Authentication.SinginFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="276.00dp"
        android:layout_marginHorizontal="18.00dp"
        android:src="@drawable/welcome_screen"
        android:layout_marginTop="50.00dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66.00dp"
        android:layout_marginHorizontal="43.00dp"
        android:layout_marginTop="40.00dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="500"
            android:fontFamily="@font/poppins"
            android:text="Join us via phone number"
            android:textColor="@color/black"
            android:textSize="20.00sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="400"
            android:fontFamily="@font/poppins"
            android:text="Weâ€™ll text a code to verify your phone"
            android:textColor="#A0A0A0"
            android:layout_gravity="center"
            android:textSize="14.00sp" />

    </LinearLayout>

        <EditText
            android:id="@+id/EtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12.00dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:hint="Full Name"
            android:textColor="@color/black"
            android:layout_marginHorizontal="16.00dp"
            android:background="@drawable/bg_tv_for_search"
            android:layout_marginTop="30.00dp"
            android:paddingLeft="10.00dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.00dp"
        android:layout_marginBottom="20.00dp"
        android:background="@drawable/bg_tv_for_search"
        android:layout_marginHorizontal="15.00dp"
        android:orientation="horizontal">


     <com.hbb20.CountryCodePicker
         android:id="@+id/CountryCodePicker"
         android:layout_width="wrap_content"
         android:layout_height="50.00dp"
         app:ccp_showArrow="true"
         app:ccp_showPhoneCode="true"
         app:ccp_showNameCode="false"
         android:layout_gravity="center"
         android:paddingTop="5.00dp"
         app:ccpDialog_showFlag="true"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40.00dp"
            android:layout_marginTop="10.00dp"
            android:background="#E0E0E0" />

        <EditText
            android:id="@+id/EtNumber"
            android:layout_width="match_parent"
            android:layout_height="50.00dp"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:maxLength="10"
            android:hint="Your Phone Number"
            android:textColor="@color/black"
            android:background="@drawable/bg_tv_for_search"
            android:paddingStart="10.00dp"/>
    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/bg_btn"
        android:layout_marginHorizontal="16.00dp"
        android:layout_marginTop="20.00dp"
        android:layout_marginBottom="20.00dp"
        android:textColor="@color/white"/>









    </LinearLayout>


    
</ScrollView>